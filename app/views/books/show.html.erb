<div class = "container px-5 px-sm-0">
  <div class = "row">
    <%= render 'books/postbooks', user: @book1.user %>
      <div class = "col-md-8 offset-md-1">
        <h2>Book details</h2>
        <table class = "table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book1.user_id) do %>
                  <%= image_tag @book1.user.get_profile_image(100,100) %>
                  <br>
                  <%= @book1.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book1.id) do %>
                  <%= @book1.title %>
                <% end %>
              </td>
              <td>
                <%= @book1.body %>
              </td>
              <% if @book1.favorited_by?(current_user) %>
                  <td>
                    <%= link_to book_favorite_path(@book1), method: :delete do %>
                      <i class="fas fa-heart" style="color: red;"></i>
                      <%= @book1.favorites.count %>
                    <% end %>
                  </td>
              <% else %>
                  <td>
                    <%= link_to book_favorite_path(@book1), method: :post do %>
                      <i class="far fa-heart"></i>
                      <%= @book1.favorites.count %>
                    <% end %>
                  </td>
              <% end %>
              <td>
                  <%= "#{@book1.post_comments.count} comments" %>
              <% if @book1.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book1.id) , class: "btn btn-sm btn-success"%></td>
                <td><%= link_to "Destroy", book_path(@book1.id) , method: :delete, "data-confirm" => "Are you sure？", class: "btn btn-sm btn-danger"%></td>
              <% end %>
            </tr>
          </tbody>
        </table>
        <table class = "table">
          <tbody>
            <% @book1.post_comments.each do |post_comment| %>
            <tr>
              <td>
                <%= link_to user_path(post_comment.user_id) do %>
                  <%= image_tag post_comment.user.get_profile_image(100,100) %>
                  <br>
                  <%= post_comment.user.name %>
                <% end %>
              </td>
              <td><%= post_comment.comment %></td>
              <% if post_comment.user == current_user %>
                  <td><%= link_to "Destroy", book_post_comment_path(post_comment.book.id, post_comment.id) , method: :delete, "data-confirm" => "Are you sure？", class: "btn btn-sm btn-danger"%></td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
          </table>
          <div class="container">
            <%= form_with model: [@book1, @post_comment] do |f| %>
              <%= f.text_area :comment ,class: "form-control"%>
              <%= f.submit "送信" %>
            <% end %>
      </div>
    </div>
  </div>
</div>